generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  username      String        @unique
  passwordHash  String
  lastLogin     DateTime?
  activities    ActivityLog[]
}

model ShortLink {
  id              Int        @id @default(autoincrement())
  originalUrl     String
  shortCode       String     @unique
  alias           String?    @unique
  clickCount      Int        @default(0)
  createdAt       DateTime   @default(now())
  expiryDate      DateTime?
  qrCodeFilename  String?
  password        String?
  tags            String?    // 쉼표 구분 태그 저장
  ogTitle         String?
  ogDescription   String?
  ogImage         String?
  clicks          ClickLog[]
}

model ClickLog {
  id          Int       @id @default(autoincrement())
  link        ShortLink @relation(fields: [linkId], references: [id], onDelete: Cascade)
  linkId      Int
  timestamp   DateTime  @default(now())
  ipAddress   String?
  userAgent   String?
  referrer    String?
  platform    String?
}

model ActivityLog {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  action    String
  details   String?
  timestamp DateTime @default(now())
}

model Image {
  id           Int      @id @default(autoincrement())
  filename     String
  originalName String
  uploadDate   DateTime @default(now())
}

model Policy {
  id          Int      @id @default(autoincrement())
  botName     String
  slug        String   @unique
  type        String   // tos, privacy
  contentHtml String
  createdAt   DateTime @default(now())
}

model QRProfile {
  id           Int     @id @default(autoincrement())
  name         String
  fgColor      String  @default("#000000")
  bgColor      String  @default("#ffffff")
  logoFilename String? @default("logo_qr.png")
  isDefault    Boolean @default(false)
}
